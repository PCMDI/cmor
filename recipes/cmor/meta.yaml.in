package:
    name: cmor
    version: @VERSION@.numpy

source:
    git_rev: @UVCDAT_BRANCH@
    git_url: git://github.com/PCMDI/cmor.git

build:
  number: @BUILD_NUMBER@
 
test:
  requires:
    - python
  imports:
    - cmor

requirements:
  build:
    - {{ compiler("c") }}
    - {{ compiler("fortran") }}
  host:
    - python {{ python }}
    - libuuid
    - udunits2
    - six
    - json-c
    - hdf5
    - libnetcdf 4.6.2
    - numpy
    - setuptools
    - cdms2
  run:
    - python {{ python }}
    - libuuid
    - udunits2
    - six
    - json-c
    - {{ pin_compatible('numpy') }}
    - {{ pin_compatible('hdf5') }}
    - libnetcdf 4.6.2
    - cdms2

about:
    home:  http://gitub.com/PCMDI
